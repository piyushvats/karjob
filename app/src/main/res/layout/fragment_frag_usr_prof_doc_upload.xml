<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
tools:context=".user.FragUsrProfDocUpload">

    <RelativeLayout
        android:id="@+id/rel_lay_expid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:text="@string/title_upload_document"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />


        <Button
            android:id="@+id/imageButton2"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/colorPrimary"
            android:text="@string/title_final_submit"
            android:textColor="@color/backgrdstart"
            android:textStyle="normal" />



    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
            android:id="@+id/btnedu1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="82dp"
            android:text="@string/title_edu_docs"
            android:textAlignment="center"
            android:textColor="@color/backgrdstart"
            android:textSize="14sp"
            android:textStyle="normal"
            android:background="@drawable/mybutton"
            android:textAllCaps="false"
            android:focusable="true"
            android:padding="10dp"   />


        <TextView
            android:id="@+id/textView_edu"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="150dp"
            android:text=""
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnaddr"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="193dp"
            android:layout_marginEnd="77dp"
            android:text="@string/title_idproof_docs"
            android:textAlignment="center"
            android:textColor="@color/backgrdstart"
            android:textSize="14sp"
            android:textStyle="normal"
            android:background="@drawable/mybutton"
            android:focusable="true"
            android:padding="10dp"
            android:textAllCaps="false"
            />

        <TextView
            android:id="@+id/textView_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="260dp"
            android:text=""
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btnself"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="305dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/mybutton"
            android:focusable="true"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:text="@string/title_selfpic"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/textView_self"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="370dp"
            android:text=""
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView_SubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="450dp"
            android:text="@string/info_usr_doc_note"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />


        <CheckBox
            android:id="@+id/checkBox_term"
            android:layout_width="401dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="530dp"
            android:checked="true"
            android:text="@string/info_term_condition" />

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>