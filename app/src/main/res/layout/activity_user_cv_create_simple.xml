<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.cvbutton.UserCvCreateSimple">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:text="@string/title_simplecvtitle"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:text="@string/title_usr_submitinfo"
            android:textAllCaps="false"
            android:textColor="@color/backgrdstart"
            android:textStyle="normal" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="0dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView0"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:text="@string/title_yourname"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/editText0"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="75dp"
                android:background="@drawable/shape"
                android:textAlignment="center"
                android:textSize="18sp"
                android:hint="@string/title_yourname"
                android:maxLength="50"
                android:inputType="text"/>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="148dp"
                android:layout_marginEnd="0dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="150dp"
                android:text="@string/title_entermobile"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="180dp"
                android:background="@drawable/shape"
                android:textAlignment="center"
                android:textSize="18sp"
                android:hint="@string/title_choose_mobileno"
                android:maxLength="15"
                android:inputType="number"/>

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="250dp"
                android:layout_marginEnd="0dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_marginTop="263dp"
                android:layout_marginStart="18dp"
                android:text="@string/title_your_age"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/age_slider"
                android:layout_width="310dp"
                android:layout_height="20dp"
                android:layout_marginStart="58dp"
                android:layout_marginTop="265dp"
                android:contentDescription="sliderval"
                android:valueFrom="18"
                android:valueTo="80"
                android:stepSize="1" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_marginTop="250dp"
                android:layout_marginStart="150dp"
                android:text="@string/title_inyear"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="320dp"
                android:layout_marginEnd="0dp"
                android:background="?android:attr/listDivider" />



            <!--For radio option-->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginTop="320dp"
                android:layout_marginStart="150dp"
                android:textAlignment="center"
                android:text="@string/title_sex_type"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/radioGroupGender"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="350dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:gravity="center" >

                <RadioButton
                    android:id="@+id/radiomale"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/mybuttonbackground"
                    android:button="@android:color/transparent"
                    android:focusable="true"
                    android:text="@string/title_malesex"
                    android:textAllCaps="false"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/radiofemale"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/mybuttonbackground"
                    android:button="@android:color/transparent"
                    android:focusable="true"
                    android:text="@string/title_femalesex"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="18dp" />

                <RadioButton
                    android:id="@+id/radioother"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/mybuttonbackground"
                    android:button="@android:color/transparent"
                    android:focusable="true"
                    android:text="@string/title_othersex"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="18dp"/>

            </RadioGroup>



            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="410dp"
                android:layout_marginEnd="0dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="410dp"
                android:layout_marginStart="20dp"
                android:text="@string/title_lbl_canenglish"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textAlignment="center"      />

            <RadioGroup
                android:id="@+id/radioGroupEngLang"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="440dp"
                android:layout_marginStart="90dp"
                android:orientation="horizontal"
                android:gravity="center" >

                <RadioButton
                    android:id="@+id/radioengyes"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="0dp"
                    android:background="@drawable/mybuttonbackground"
                    android:button="@android:color/transparent"
                    android:focusable="true"
                    android:text="@string/title_yes"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="18dp"  />

                <RadioButton
                    android:id="@+id/radioengno"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/mybuttonbackground"
                    android:button="@android:color/transparent"
                    android:focusable="true"
                    android:text="@string/title_no"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="18dp" />
            </RadioGroup>



            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="500dp"
                android:layout_marginEnd="0dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="520dp"
                android:layout_marginStart="20dp"
                android:text="@string/title_lbl_expinfo"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textAlignment="center"  />

            <RadioGroup
                android:id="@+id/radioGroupExp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="550dp"
                android:layout_marginStart="100dp"
                android:orientation="horizontal"
                android:gravity="center" >

                <RadioButton
                    android:id="@+id/radioexpyes"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="0dp"
                    android:background="@drawable/mybuttonbackground"
                    android:button="@android:color/transparent"
                    android:focusable="true"
                    android:text="@string/title_yes"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="18dp"  />

                <RadioButton
                    android:id="@+id/radioexpno"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/mybuttonbackground"
                    android:button="@android:color/transparent"
                    android:focusable="true"
                    android:text="@string/title_no"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="18dp" />
            </RadioGroup>


            <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="610dp"
                android:layout_marginEnd="0dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="620dp"
                android:layout_marginStart="10dp"
                android:text="@string/title_lbleduinfo"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textAlignment="center"  />

            <RadioGroup
                android:id="@+id/radioGroupEdu"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginTop="650dp"
                android:layout_marginStart="50dp"
                android:orientation="horizontal"
                 >

                <RadioButton
                    android:id="@+id/radioedu10th"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="0dp"
                    android:background="@drawable/mybuttonbackground"
                    android:button="@android:color/transparent"
                    android:focusable="true"
                    android:text="@string/title_10th"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="12dp"  />

                <RadioButton
                    android:id="@+id/radioedu12th"
                    android:layout_width="70dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/mybuttonbackground"
                    android:button="@android:color/transparent"
                    android:focusable="true"
                    android:text="@string/title_12th"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/radioedugrad"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/mybuttonbackground"
                    android:button="@android:color/transparent"
                    android:focusable="true"
                    android:text="@string/title_gradu"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/radionoedu"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginStart="-200dp"
                    android:background="@drawable/mybuttonbackground"
                    android:button="@android:color/transparent"
                    android:focusable="true"
                    android:text="@string/title_uneducated"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="12dp" />
            </RadioGroup>


            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="760dp"
                android:layout_marginEnd="0dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="770dp"
                android:layout_marginStart="20dp"
                android:text="@string/title_select_work_type"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textAlignment="center"  />

            <Button
                android:id="@+id/choosejobcat"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="800dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/mybutton"
                android:focusable="true"
                android:text="@string/title_choose_work_type"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"/>


            <CheckBox
                android:id="@+id/checkBox_term"
                android:layout_width="401dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="880dp"
                android:checked="true"
                android:text="@string/info_term_condition" />


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>