<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".user.SettingsUser">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/textView_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:text="@string/title_usraccount_settings"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_marginStart="86dp"
            android:layout_marginTop="50dp"
            >

            <ImageView
                android:id="@+id/imgpropic_sett"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentStart="true"
                android:maxWidth="100dp"
                android:maxHeight="100dp"
                android:padding="2dp"
                android:src="@mipmap/male_avatar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/title_modifypropic"
                android:background="#0000ffff"
                android:gravity="bottom|center"
                />

        </FrameLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/listDivider" />

        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="300dp"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:id="@+id/radio_lan_gp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="कृपया अपनी भाषा चुनें" />

            <RadioButton
                android:id="@+id/radio_lang_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="English" />

            <RadioButton
                android:id="@+id/radio_lang_hi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="हिंदी" />
        </RadioGroup>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/listDivider" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="380dp"
            android:orientation="horizontal"
            android:id="@+id/registration_pg"
            android:visibility="visible">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="25dp">

                <EditText
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/shape"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:ems="10"
                    android:maxLength="15"
                    android:hint="@string/title_updatemobile"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/imageButton2"
                android:layout_width="200dp"
                android:layout_height="53dp"
                android:background="@drawable/mybutton"
                android:textColor="@color/backgrdstart"
                android:textStyle="bold"
                android:text="@string/title_editmobile"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="100dp"
                android:textAllCaps="false"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="380dp"
            android:orientation="horizontal"
            android:id="@+id/registration_pg2"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="25dp">

                <EditText
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/shape"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:hint="@string/action_enterotp"
                    android:inputType="phone"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/imageButton3"
                android:layout_width="200dp"
                android:layout_height="53dp"
                android:background="@drawable/mybutton"
                android:textColor="@color/backgrdstart"
                android:textStyle="bold"
                android:text="@string/action_verotp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="100dp"
                android:textAllCaps="false"/>

        </RelativeLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="550dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/listDivider" />


    </RelativeLayout>


</ScrollView>
